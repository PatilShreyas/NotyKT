<resources>

    <style name="ActionBarStyle" parent="Widget.MaterialComponents.ActionBar.Primary">
        <item name="android:background">@color/primaryColor</item>
    </style>

    <style name="UsernameFieldStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="startIconDrawable">@drawable/ic_user</item>
        <item name="android:hint">@string/hint_username</item>
        <item name="hintTextColor">@color/primaryColor</item>
    </style>

    <style name="PasswordFieldStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="startIconDrawable">@drawable/ic_lock</item>
        <item name="endIconMode">password_toggle</item>
        <item name="android:hint">@string/hint_password</item>
        <item name="hintTextColor">@color/primaryColor</item>
    </style>

    <style name="StatusTextView">
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="fontFamily">@font/gilroy_regular</item>
    </style>

    <style name="StatusView">
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/dimen_8</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="FabSaveStyle">
        <item name="android:contentDescription">@string/text_noty_icon</item>
        <item name="android:fontFamily">@font/gilroy_semibold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/defaultWhite</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>
