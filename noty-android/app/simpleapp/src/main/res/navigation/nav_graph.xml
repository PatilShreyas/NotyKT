<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/notesFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="dev.shreyaspatil.noty.view.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/login_fragment">
        <action
            android:id="@+id/action_loginFragment_to_notesFragment"
            app:destination="@id/notesFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="dev.shreyaspatil.noty.view.home.HomeFragment"
        android:label="Noty"
        tools:layout="@layout/home_fragment">
        <action
            android:id="@+id/action_homeFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_homeFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="dev.shreyaspatil.noty.view.register.RegisterFragment"
        android:label="Register"
        tools:layout="@layout/register_fragment">
        <action
            android:id="@+id/action_registerFragment_to_notesFragment"
            app:destination="@id/notesFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/noteDetailFragment"
        android:name="dev.shreyaspatil.noty.view.detail.NoteDetailFragment"
        android:label="note_detail_fragment"
        tools:layout="@layout/note_detail_fragment">
        <argument
            android:name="noteId"
            app:argType="string"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/notesFragment"
        android:name="dev.shreyaspatil.noty.view.notes.NotesFragment"
        android:label="notes_fragment"
        tools:layout="@layout/notes_fragment">
        <action
            android:id="@+id/action_notesFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_notesFragment_to_addNoteFragment"
            app:destination="@id/addNoteFragment" />
        <action
            android:id="@+id/action_notesFragment_to_noteDetailFragment"
            app:destination="@id/noteDetailFragment">
            <argument
                android:name="noteId"
                android:defaultValue="null"
                app:argType="string" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/addNoteFragment"
        android:name="dev.shreyaspatil.noty.view.add.AddNoteFragment"
        android:label="add_note_fragment"
        tools:layout="@layout/add_note_fragment" />
</navigation>
